{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row">
            <form name="authenticate" action="{{ path('security-login') }}" method="POST">
                <h2> Login</h2>
                <input type="text" name="_username" class="form-control">
                <input type="text" name="_password" class="form-control">
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                <input type="submit" value="Submit" class="btn btn-lg">
            </form>
        </div>
    </div>
{% endblock %}
