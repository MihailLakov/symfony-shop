{% extends 'admin/admin_base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <h2>Manage Brands</h2>
            </div>
            <div class="col-xs-12">
                <a href="{{path('admin-brand-create')}}" class="btn btn-primary"> <span class="glyphicon glyphicon-plus"></span>Add Brand</a>            
                <table class="table table-striped table-cart">
                    <tr>
                        <th>ID</th>
                        <th>Title</th>
                        <th>Action</th>
                    </tr>
                    {% for brand in brands %}
                        <tr>
                            <td>{{brand.id}}</td>
                            <td>{{brand.title}}</td>
                            <td> 
                                <a href="{{path('admin-brand-edit',{id:brand.id}) }}"  class="btn btn-info">Edit</a>         
                                <a href="{{path('admin-brand-delete',{id:brand.id}) }}"  class="btn btn-danger">Delete</a>
                            </td>    
                        </tr>
                    {% endfor %}
                </table>
            </div>

        </div>
    </div>
{% endblock %}
