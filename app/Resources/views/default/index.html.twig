{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row">

            {% include 'homepage_carousel.html.twig' %}

            <div class="col-xs-12">
                <h2>Latest Products</h2>
                <div class="row">
                    {% for product in latest_products %}
                        <div class="col-xs-12 col-md-4">
                            {{ render(controller('ShopBundle:Product:singleProductTemplate', {'id': product.id})) }}
                        </div>
                    {% endfor%}
                </div>
            </div>
            <div class="col-xs-12 col-md-6">

            </div>

        </div>
    </div>
{% endblock %}

