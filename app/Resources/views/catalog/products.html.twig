{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row">
            
            <h2>Products Catalog</h2>
            {% for product in products %}
            <div class="well">
                <h3>{{product.title}}</h3>
                <p>Description: {{ product.description }}</p>
                <p>Price: {{ product.price }}</p>
                <p>Stock: {{ product.stock }}</p>  
                <a href="{{path('add-to-cart',{id:product.id})}}">Add to Cart</a>
            </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
